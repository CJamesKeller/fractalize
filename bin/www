#!/usr/bin/env node

const app = require('../app');
const http = require('http');
const port = normalizePort(process.env.PORT || '3002');
const server = http.createServer(app);

app.set('port', port);
server.listen(port);

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}
